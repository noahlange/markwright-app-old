{
  "name": "Markwright",
  "private": true,
  "license": "MIT",
  "description": "Bares-bones DTP in Markdown and SCSS.",
  "version": "0.6.0",
  "author": "Noah Lange <noahrlange@gmail.com>",
  "dependencies": {
    "change-case": "^3.0.1",
    "core-decorators": "^0.20.0",
    "electron": "^3.0.0-beta.5",
    "firacode": "^1.205.0",
    "front-matter": "^2.3.0",
    "gray-matter": "^4.0.1",
    "hercule": "^4.1.1",
    "highlight.js": "^9.12.0",
    "js-cache": "^1.0.3",
    "jsonc-parser": "^2.0.1",
    "line-column": "^1.0.2",
    "lodash": "^4.17.10",
    "markwright": "noahlange/markwright",
    "monaco-editor": "^0.14.3",
    "paper-size": "^1.1.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-electron-web-view": "^2.0.1",
    "react-monaco-editor": "^0.18.0",
    "react-mosaic-component": "^1.1.1",
    "react-promise": "^2.0.3",
    "react-virtualized": "^9.20.1",
    "sass.js": "^0.10.10",
    "simple-markdown": "^0.4.1",
    "stream-to-string": "^1.1.0",
    "workly": "^1.0.1"
  },
  "devDependencies": {
    "@types/highlight.js": "^9.12.3",
    "@types/lodash": "^4.14.116",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "css-loader": "^1.0.0",
    "electron-builder": "^20.28.2",
    "monaco-editor-webpack-plugin": "^1.5.1",
    "prettier": "^1.14.2",
    "style-loader": "^0.22.1",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "main": "main.js",
  "scripts": {
    "dist": "npm run build && build",
    "start": "electron .",
    "build": "webpack --mode production",
    "watch": "webpack --watch",
    "pretty": "prettier --write 'src/**/*' 'main.js'",
    "lint": "tslint 'src/**/*'"
  },
  "prettier": {
    "singleQuote": true
  },
  "build": {
    "appId": "com.noahlange.markwright",
    "productName": "Markwright",
    "directories": {
      "output": "dist"
    },
    "fileAssociations": {
      "ext": "mw",
      "name": "Markwright document",
      "icon": "assets/file_icon.icns"
    },
    "files": [
      "assets",
      "static",
      "lib",
      "node_modules",
      "main.js",
      "public",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.graphics-design",
      "target": "dmg"
    }
  }
}
