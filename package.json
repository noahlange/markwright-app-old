{
  "name": "Markwright",
  "private": true,
  "license": "MIT",
  "description": "Rich document layout in Markdown and SCSS.",
  "version": "1.1.0",
  "author": "Noah Lange <noahrlange@gmail.com>",
  "dependencies": {
    "change-case": "^3.0.1",
    "core-decorators": "^0.20.0",
    "electron-store": "^1.3.0",
    "firacode": "^1.205.0",
    "front-matter": "^2.3.0",
    "gray-matter": "^4.0.1",
    "js-cache": "^1.0.3",
    "jsonc-parser": "^2.0.1",
    "lodash": "^4.17.10",
    "lodash-decorators": "^5.0.0",
    "markwright": "noahlange/markwright",
    "monaco-editor": "^0.14.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-electron-web-view": "^2.0.1",
    "react-monaco-editor": "^0.17.2",
    "react-promise": "^2.0.3",
    "sass.js": "^0.10.10",
    "simple-markdown": "^0.4.1",
    "workly": "^1.0.1"
  },
  "devDependencies": {
    "@types/react": "^16.0.21",
    "css-loader": "^1.0.0",
    "electron": "^2.0.7",
    "electron-builder": "^19.45.4",
    "electron-rebuild": "^1.8.2",
    "mini-css-extract-plugin": "^0.4.1",
    "monaco-editor-webpack-plugin": "^1.5.1",
    "style-loader": "^0.22.1",
    "ts-loader": "^4.4.2",
    "typescript": "^2.6.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "main": "main.js",
  "scripts": {
    "release": "npm run build && build",
    "start": "electron .",
    "build": "webpack --mode production",
    "watch": "webpack --watch"
  },
  "build": {
    "appId": "com.noahlange.markwright",
    "productName": "Markwright",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "lib",
      "node_modules",
      "main.js",
      "public",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
